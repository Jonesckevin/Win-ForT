<Window x:Class="WinFORCustomizer.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinFORCustomizer"
        mc:Ignorable="d"
        Title="Errors" SizeToContent="WidthandHeight" ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MaxWidth="1600"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MaxHeight="600"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Button x:Name="ShowLogFile" Content="Open Log Files" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Click="OpenLogFiles" />
    </Grid>
</Window>
